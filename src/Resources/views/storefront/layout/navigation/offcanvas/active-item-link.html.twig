{# color stuff #}
{% set color = 'rgb(34,34,34)' %}

{% if ( item.customFields['hintergrundfarbe'] ) %}
    {% set color = item.customFields['hintergrundfarbe'] %}
{% endif %}

<a class="nav-item nav-link navigation-offcanvas-headline"
   href="{{ category_url(item) }}"
   {% if category_linknewtab(item) %}target="_blank"{% endif %}
   itemprop="url"
    style="color: {{ color }}">
        <span itemprop="name">{{ item.translated.name }}</span>
</a>